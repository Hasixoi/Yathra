<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/train_bg_4"
    tools:context=".AboutUs">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="520dp"
        android:background="#65FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="121dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="119dp"
            android:alpha="1"
            android:background="@drawable/custom_toast_background"
            android:backgroundTint="@color/CadetBlue"
            android:text="About Us"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/aboutUsTxt"
            android:layout_width="292dp"
            android:layout_height="256dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="107dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="86dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Welcome to Yathra - your travel companion for seamless train journeys! Our experts provide real-time information and user-friendly features, ensuring safe and enjoyable travel. Simplify your trips with Yathra today!"
            android:textAlignment="center"
            android:textSize="19dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>